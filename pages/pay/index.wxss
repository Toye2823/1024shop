/* pages/pay/index.wxss */
.pay{
    padding: 0 30rpx;
}
.pay .tit{
    font-size: 26rpx;
    color: #b2b2b2;
    height: 64rpx;
    line-height: 64rpx;
}
.pay .list{
    background-color: #ffffff;
    height: 68rpx;
    line-height: 68rpx;
    margin-bottom: 30rpx;
    font-size: 30rpx;
    border-radius: 10rpx;
    position: relative;
}
.pay .list .icon{
    width: 27rpx;
    height: 40rpx;
    margin: 12rpx 30rpx 0 10rpx;
}
.pay .list .icon image{
    width: 100%;
    height: 100%;
}
.pay .list input{
    height: 68rpx;
    line-height: 68rpx;
}
.pay .list .eye{
    width: 35rpx;
    height: 24rpx;
    position: absolute;
    right: 20rpx;
    top: 5rpx;
}
.pay .list .eye image{
    width: 100%;
    height: 100%;
}
button{
    width: 180rpx;
    height: 68rpx;
    line-height: 68rpx;
    font-size: 30rpx;
    color: #fff;
    background-color: #ff5050;
    position: absolute;right: 0;
    top: 0;
    border-radius: 0 10rpx 10rpx 0;
    padding: 0;
}
button::after {
  border: none;
}
.pay .btn{
    text-align: center;
    background-color: #ff5050;
    color: #fff;
    margin-top: 60rpx;
}
.phClass{
    color: #b2b2b2;
}