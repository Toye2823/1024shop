.fl{
    float: left;
}
.fr{
    float: right;
}
.fw{
    overflow: hidden;
}
.account .account_bg image{
    width: 100%;
    height: 560rpx;
}
.account .account_bg {
    position: relative;
}
.account .position{
    width: 100%;
    position: absolute;
    left: 20rpx;
    top: 140rpx;
    color: #fff;
}
.account .position .up text{
    font-size: 24rpx;
    margin-left: 20rpx;
}
.account .position .up image{
    width: 34rpx;
    height: 24rpx;
    margin-left: 10rpx;
    vertical-align: middle;
}
.account .center{
    font-size: 60rpx;
    text-align: center;
    line-height: 140rpx;
}
.account .down .fl{
    width: 50%;
    text-align: center;
    font-size: 28rpx;
    line-height: 50rpx;
}
.myaccount{

    margin: 40rpx auto;
    padding-bottom: 40rpx;
    border-bottom: 1px solid #fafafa;
}
.myaccount .fl{
    width: 50%;
    text-align: center;
}
.myaccount .fl:last-child{
    border-left: 1px solid #fafafa;
    box-sizing:border-box; 
}
.myaccount .fl image{
    width: 45rpx;
    height: 38rpx;
    vertical-align: middle;
}
.myaccount .fl text{
    width: 50%;
    font-size: 30rpx;
    color: #f23a3a;
    margin-left: 10rpx;
}

.runwater{
    padding: 0 30rpx;
    font-size: 28rpx;
    height: 60rpx;
    line-height: 60rpx;
}
.runwater image{
    margin-top: 20rpx;
    width: 12rpx;
    height: 20rpx;
}
