.sort{
    padding: 14px 20rpx;
}
.sort .tit{
    background-color: #fff;
    border-radius: 20rpx 20rpx 0 0;
    height: 68rpx;
    line-height: 68rpx;
    text-align: center;
    padding-top: 20rpx;
}
.sort .wrap{
    overflow: hidden;
    background-color: #fff;
    border-radius: 0 0 20rpx 20rpx;
    margin-bottom: 20rpx;
    padding-bottom: 40rpx;
}
.sort .wrap .list{
    float: left;
    font-size: 26rpx;
    height: 50rpx;
    width: 140rpx;
    line-height: 50rpx;
    box-sizing: border-box;
    border: 1px solid #bbb;
    border-radius: 25rpx;
    text-align: center;
    margin: 20rpx 18rpx;
    position: relative;
}
.sort .wrap .list .close{
    background-image: url("data:image/png;base64,");
    width: 24rpx;
    height: 24rpx;
    background-size: 100%;
    display: block;
    position: absolute;
    right: -6rpx;
    top: -10rpx;
}
.note{
    font-size: 18rpx;
    color: #b2b2b2;
    text-align: center;
}